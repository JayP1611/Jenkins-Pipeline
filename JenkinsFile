pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo "Building..."
            }
        }
        stage('Test') {
            steps {
                echo "Testing..."
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying..."
            }
        }
    }
    post {
        success {
            mail to: 'pawarjay1611@gmail.com',
                 subject: 'Jenkins Pipeline - Build Successful',
                 body: 'The Jenkins pipeline has completed successfully.'
        }
        failure {
            mail to: 'pawarjay1611@gmail.com',
                 subject: 'Jenkins Pipeline - Build Failed',
                 body: 'The Jenkins pipeline has failed. Please check logs.'
        }
    }
}
